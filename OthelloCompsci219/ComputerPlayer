import java.util.Random;
public class ComputerPlayer {

	private Color playerColor = Color.BLANK;
	private GameBoard gameBoard = null;
	Random rand = new Random();
	
	public ComputerPlayer(GameBoard aGameBoard, Color aColor){
	    gameBoard = aGameBoard;
	    playerColor = aColor;
	}
	
	public int ValidateRandomNumber(String row_Column){
		int n = rand.nextInt(7);
		n += 1;
		boolean inputValid = false;
	    n = -100;

	    do {		
	      if (gameBoard.checkWithinBoard(n) == true) {
	        inputValid = true;
	      }
			} while (inputValid == false);
	

	    return n;
		}
		

	
	
	public boolean makeMove() {
		int flip_count = 0;
	      boolean status = false;
	      int row = 0;
	      int column = 0;

	      while (status == false) {
	        row = ValidateRandomNumber("Row: ");
	        column = ValidateRandomNumber("Column: ");
	        status = gameBoard.checkAdjacentCells(row, column, playerColor);
	        if (status == false){
	          System.out.println("Invalid move. Try again.");
	        }
	      }

	      if (gameBoard.flip(row, column, playerColor) == 0){
	        System.out.println("You cannot place a piece here since you will not be overturning any of your opponent's game pieces.");
	        status = false;
	      }
	      else {
	        status = true;
	      }

	      return status;
	    }
	}
	

